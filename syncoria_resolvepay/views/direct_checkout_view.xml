<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <template id="resolvepay_payment_footer_inherit" name="resolvepay_payment_footer_inherit" inherit_id="website_sale.payment_footer">
        <xpath expr="//button[@name='o_payment_submit_button']" position="before">
            <t t-if="env.user.has_group('base.group_user')">
                <button name="resolvepay_direct_checkout"
                    id="resolvepay_direct_checkout"
                    type="button"
                    class="btn btn-primary"
                    data-icon-class="fa-chevron-right">
                 Pay with Resolve Pay <i class="fa fa-chevron-right"/>
                </button>
            </t>
        </xpath>
    </template>

</odoo>