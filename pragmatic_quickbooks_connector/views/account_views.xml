<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<!-- Account account inherited -->
	<record model="ir.ui.view" id="qbo_view_account_form">
		<field name="name">qbo.view.account.form</field>
		<field name="model">account.account</field>
		<field name="inherit_id" ref="account.view_account_form" />
		<field name="arch" type="xml">
			<field name="deprecated" position="after">
				<field name="qbo_acc_type" widget="selection" />
				<!-- domain="[('qbo_type_id','=',qbo_acc_type)]" -->
				<field name="qbo_acc_subtype" widget="selection" />
				<field name="qbo_id" readonly="1"/>
			</field>
		</field>
	</record>

	<record model="ir.ui.view" id="qbo_view_account_tree">
		<field name="name">qbo.view.account.tree</field>
		<field name="model">account.account</field>
		<field name="inherit_id" ref="account.view_account_list" />
		<field name="arch" type="xml">
			<field name="user_type_id" position="after">
				<field name="qbo_id" readonly="1"/>
			</field>
		</field>
	</record>

	<!-- Account tax inherited -->
	<record model="ir.ui.view" id="qbo_view_tax_form">
		<field name="name">qbo.view.account.tax.form</field>
		<field name="model">account.tax</field>
		<field name="inherit_id" ref="account.view_tax_form" />
		<field name="arch" type="xml">
			<field name="hide_tax_exigibility" position="before">
				<field name="tax_agency_id" widget="selection" attrs="{'invisible':[('amount_type','=','group')],'required':[('amount_type','!=','group')]}"/>
			</field>
			<field name="type_tax_use" position="after">
				<field name="qbo_tax_id" readonly="1" attrs="{'invisible':[('amount_type','!=','group')]}"/>
				<field name="qbo_tax_rate_id" string="QBO Tax Id" readonly="1" attrs="{'invisible':[('amount_type','=','group')]}"/>
			</field>
		</field>
	</record>

	<record model="ir.ui.view" id="qbo_view_tax_tree">
		<field name="name">qbo.view.account.tax.tree</field>
		<field name="model">account.tax</field>
		<field name="inherit_id" ref="account.view_tax_tree" />
		<field name="arch" type="xml">

			<field name="active" position="after">
				<field name="qbo_tax_id"/>
				<field name="qbo_tax_rate_id"/>
			</field>
		</field>
	</record>

	<!-- Account move inherited -->
	<record model="ir.ui.view" id="qbo_view_account_invoice_form1">
		<field name="name">qbo.view.account.move.form</field>
		<field name="model">account.move</field>
		<field name="inherit_id" ref="account.view_move_form" />
		<field name="arch" type="xml">
			<field name="partner_id" position="after">
				<field name="qbo_invoice_id" readonly="1"/>
				<field name="qbo_invoice_name" readonly="1"/>
				<field name="tax_state" />

			</field>
		</field>
	</record>



	<!-- Account move invoice tree inherited -->
	<record model="ir.ui.view" id="qbo_view_account_invoice_tree3">
		<field name="name">qbo.view.account.move.tree3</field>
		<field name="model">account.move</field>
		<field name="inherit_id" ref="account.view_invoice_tree" />
		<field name="arch" type="xml">
			<field name="name" position="after">
<!--				<field name="qbo_invoice_id" readonly="1"/>-->
				<field name="qbo_invoice_name"/>

			</field>
		</field>
	</record>


	<record id="qbo_invoice_search_view1" model="ir.ui.view">
        <field name="name">qbo.invoice.select</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_account_invoice_filter"/>
        <field name="arch" type="xml">
            <field name="partner_id" position="after">
                <field name="qbo_invoice_name"/>
            </field>
		</field>
	</record>



	  <!--Inherit quotations search view-->
    <record id="view_sale_order_inherit_search" model="ir.ui.view">
      <field name="name">sale.order.search.expand.filter</field>
      <field name="model">sale.order</field>
      <field name="inherit_id" ref="sale.sale_order_view_search_inherit_quotation"/>
      <field name="arch" type="xml">
        <xpath expr="//search" position="inside">
          <!-- This field will show up on the default filters
               &lt; is the XML encoding for < and &gt; is the XML encoding for > -->
          <filter string="Total &lt; 1000" name="total_under_1000" domain="[('amount_total', '&lt;', 1000)]"/>
          <filter string="Total &gt;= 1000" name="total_above_1000" domain="[('amount_total', '&gt;=', 1000)]"/>
        </xpath>
      </field>
    </record>


	<!-- Account journal inherited -->
	<record model="ir.ui.view" id="qbo_view_account_journal_tree">
		<field name="name">qbo.view.account.journal.form</field>
		<field name="model">account.journal</field>
		<field name="inherit_id" ref="account.view_account_journal_tree" />
		<field name="arch" type="xml">
			<field name="type" position="after">
