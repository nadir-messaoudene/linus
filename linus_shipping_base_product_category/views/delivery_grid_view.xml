<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_delivery_price_rule_form_linus_inherit" model="ir.ui.view">
        <field name="name">delivery.price.rule.form</field>
        <field name="model">delivery.price.rule</field>
        <field name="inherit_id" ref="delivery.view_delivery_price_rule_form" />
        <field name="arch" type="xml">
            <xpath expr="//form/group[2]" position="inside">
                <field name="description" attrs="{'invisible': [('parent.is_category', '=', False)], 'required': [('parent.is_category', '=', True)]}"/>
                <label for="description" string="Product Category"/>
                <div attrs="{'invisible': [('parent.is_category', '=', False)], 'required': [('parent.is_category', '=', True)]}">
                    <field name="categ_price_ids">
                        <tree editable="bottom">
                            <field name="categ_id"/>
                            <field name="price_unit"/>
                            <field name="discount"/>
                            <field name="list_price"/>
                        </tree>
                    </field>
                </div>
                <field name="formula"/>

            </xpath>
            <xpath expr="//field[@name='max_value']" position="after">
                <field name="combine"/>
            </xpath>
            <xpath expr="//label[@for='list_base_price']" position="before">
                <label for="variable_2" string="Condition" attrs="{'invisible': [('combine','=', False)], 'required': [('combine', '!=', False)]}"/>
                <div class="o_row">
                    <field name="variable_2" attrs="{'invisible': [('combine','=', False)], 'required': [('combine', '!=', False)]}"/>
                    <field name="operator_2" attrs="{'invisible': [('combine','=', False)], 'required': [('combine', '!=', False)]}"/>
                    <field name="max_value_2" attrs="{'invisible': [('combine','=', False)], 'required': [('combine', '!=', False)]}"/>
                    <field name="combine_1" attrs="{'invisible': [('combine','=', False)]}"/>
                </div>
                <label for="variable_3" string="Condition" attrs="{'invisible': [('combine_1','=', False)], 'required': [('combine_1', '!=', False)]}"/>
                <div class="o_row">
                    <field name="variable_3" attrs="{'invisible': [('combine_1','=', False)], 'required': [('combine_1', '!=', False)]}"/>
                    <field name="operator_3" attrs="{'invisible': [('combine_1','=', False)], 'required': [('combine_1', '!=', False)]}"/>
                    <field name="max_value_3" attrs="{'invisible': [('combine_1','=', False)], 'required': [('combine_1', '!=', False)]}"/>
                </div>
            </xpath>



        </field>
    </record>
</odoo>